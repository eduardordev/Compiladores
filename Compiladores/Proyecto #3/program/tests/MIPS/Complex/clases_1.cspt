//ADAPTADO A NUESTRO LENGUAJE.
class Persona {
  function init(n: string, e: int) {
    this.nombre = n;
    this.edad = e;
  }
  function saludar(nombre: string) {
    print("Hola");
    print(nombre);
  }
}

var juan = new Persona("Juan", 20);

print(juan.edad);
print(juan.nombre);

juan.saludar("Pedro");






